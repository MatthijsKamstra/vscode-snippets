"asdoc" : {
	"prefix":"asdoc", 
	"body":["" ,"/**" ," * ${1:varName} " ," *" ," * @example		var _${1:varName}:* = new ${1:varName}();" ," * @see			" ," *" ," * @param		" ," *" ," * @return" ," */" ,"" ], 
	"description":"Create documentation for a function"
},

